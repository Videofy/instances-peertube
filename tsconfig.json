{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2015",
    "noImplicitAny": false,
    "sourceMap": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "outDir": "./dist",
    "lib": [
      "dom",
      "es2015",
      "es2016",
      "es2017"
    ],
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@peertube/*": [ "PeerTube/*" ]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "PeerTube",
    "client"
  ]
}
